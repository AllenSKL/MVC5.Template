@model ProfileView

@using (Html.FormWidgetBox(LinkAction.Delete))
{
    using(Html.BeginForm())
    {
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.UserFirstName)
            @Html.BootstrapTextBoxFor(model => model.UserFirstName)
            @Html.BootstrapValidationFor(model => model.UserFirstName)
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.UserLastName)
            @Html.BootstrapTextBoxFor(model => model.UserLastName)
            @Html.BootstrapValidationFor(model => model.UserLastName)
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.UserDateOfBirth)
            @Html.BootstrapDatepickerFor(model => model.UserDateOfBirth)
            @Html.BootstrapValidationFor(model => model.UserDateOfBirth)
        }
        using (Html.FormGroup())
        {
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.Username)
            @Html.BootstrapTextBoxFor(model => model.Username)
            @Html.BootstrapValidationFor(model => model.Username)
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.CurrentPassword)
            @Html.BootstrapPasswordFor(model => model.CurrentPassword)
            @Html.BootstrapValidationFor(model => model.CurrentPassword)
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.NewPassword)
            @Html.BootstrapPasswordFor(model => model.NewPassword)
            @Html.BootstrapValidationFor(model => model.NewPassword)
        }    
        using (Html.FormActions())
        {
            @Html.FormSubmit()
        }
    }
}
