@model ProfileEditView

@using (Html.FormWidgetBox(LinkAction.Delete))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FormGroup())
        {
            @Html.FormLabelFor(model => model.Username)
            @Html.FormTextBoxFor(model => model.Username)
            @Html.FormValidationFor(model => model.Username)
        }
        using (Html.FormGroup())
        {
            @Html.FormLabelFor(model => model.Password)
            @Html.FormPasswordFor(model => model.Password)
            @Html.FormValidationFor(model => model.Password)
        }
        using (Html.FormGroup())
        {
            @Html.FormLabelFor(model => model.NewPassword)
            @Html.FormPasswordFor(model => model.NewPassword)
            @Html.FormValidationFor(model => model.NewPassword)
        }
        using (Html.FormGroup())
        {
            @Html.RequiredLabelFor(model => model.Email)
            @Html.FormTextBoxFor(model => model.Email)
            @Html.FormValidationFor(model => model.Email)
        }
        using (Html.FormGroup())
        {
            using (Html.FormActions())
            {
                @Html.FormSubmit()
            }
        }
    }
}
