@model ProfileView

@using (Html.FormWidgetBox(LinkAction.Edit))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FormGroup())
        {
            @Html.FormLabelFor(model => model.Username)
            @Html.FormTextBoxFor(model => model.Username)
            @Html.FormValidationFor(model => model.Username)
        }
        using (Html.FormGroup())
        {
            @Html.FormLabelFor(model => model.CurrentPassword)
            @Html.FormPasswordFor(model => model.CurrentPassword)
            @Html.FormValidationFor(model => model.CurrentPassword)
        }

        using (Html.FormActions())
        {
            @Html.FormSubmit()
        }
    }
}
