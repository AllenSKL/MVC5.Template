@model UserView

@using (Html.FormWidgetBox(LinkAction.Details, LinkAction.Delete))
{
    using(Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.Username)
            @Html.BootstrapTextBoxFor(model => model.Username)
            @Html.BootstrapValidationFor(model => model.Username)
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.NewPassword)
            @Html.BootstrapPasswordFor(model => model.NewPassword)
            @Html.BootstrapValidationFor(model => model.NewPassword)
        }
        using (Html.FormGroup())
        {
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.Person.RoleId)
            using (Html.FormColumn())
            {
                @Html.DatalistFor(model => model.Person.RoleId, new BaseDatalist<Role, RoleView>())
            }
            @Html.BootstrapValidationFor(model => model.Person.RoleId)
        }
        using (Html.FormGroup())
        {
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.Person.FirstName)
            @Html.BootstrapTextBoxFor(model => model.Person.FirstName)
            @Html.BootstrapValidationFor(model => model.Person.FirstName)
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.Person.LastName)
            @Html.BootstrapTextBoxFor(model => model.Person.LastName)
            @Html.BootstrapValidationFor(model => model.Person.LastName)
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.Person.DateOfBirth)
            @Html.BootstrapDatePickerFor(model => model.Person.DateOfBirth)
            @Html.BootstrapValidationFor(model => model.Person.DateOfBirth)
        }
        
        @Html.HiddenFor(model => model.Id)
        using (Html.FormActions())
        {
            @Html.FormSubmit()
        }
    }
}
