@model IEnumerable<UserView>

@using (Html.TableWidgetBox(LinkAction.Create))
{
    @(
        Html
            .Grid(Model)
            .Columns(columns =>
            {
                columns.AddActionLink(LinkAction.Details);
                columns.AddActionLink(LinkAction.Edit);
                columns.AddActionLink(LinkAction.Delete);
                
                columns.AddProperty(model => model.Username);
                columns.AddProperty(model => model.Person.Role.Name);

                columns.AddProperty(model => model.Person.FirstName);
                columns.AddProperty(model => model.Person.LastName);
                columns.AddDateProperty(model => model.Person.DateOfBirth);
            })
            .ApplyAttributes()
    )
}
