@model UserView

@using (Html.FormWidgetBox(LinkAction.Details, LinkAction.Edit))
{
    using (Html.FormGroup())
    {
        @Html.NotRequiredLabelFor(model => model.Username)
        @Html.FormTextBoxFor(model => model.Username)
    }
    using (Html.FormGroup())
    {
    }
    using (Html.FormGroup())
    {
        @Html.NotRequiredLabelFor(model => model.Person.RoleName)
        @Html.FormTextBoxFor(model => model.Person.RoleName)
    }
    using (Html.FormGroup())
    {
    }
    using (Html.FormGroup())
    {
        @Html.NotRequiredLabelFor(model => model.Person.FirstName)
        @Html.FormTextBoxFor(model => model.Person.FirstName)
    }
    using (Html.FormGroup())
    {
        @Html.NotRequiredLabelFor(model => model.Person.LastName)
        @Html.FormTextBoxFor(model => model.Person.LastName)
    }
    using (Html.FormGroup())
    {
        @Html.NotRequiredLabelFor(model => model.Person.DateOfBirth)
        @Html.FormDatePickerFor(model => model.Person.DateOfBirth)
    }
    
    using(Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        using (Html.FormActions())
        {
            @Html.FormSubmit()
        }
    }
}
