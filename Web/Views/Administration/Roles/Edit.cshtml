@model RoleView

@using (Html.FormWidgetBox(LinkAction.Details, LinkAction.Delete))
{
    using(Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.Name)
            @Html.BootstrapTextBoxFor(model => model.Name)
            @Html.BootstrapValidationFor(model => model.Name)
        }
        using (Html.FormGroup())
        {
            @Html.BootstrapFormLabelFor(model => model.PrivilegesTree)
            using (Html.FormColumn())
            {
                @Html.TreeViewFor(model => model.PrivilegesTree)
            }
            @Html.BootstrapValidationFor(model => model.PrivilegesTree)
        }
        
        @Html.HiddenFor(model => model.Id)
        using (Html.FormActions())
        {
            @Html.FormSubmit()
        }
    }
}
