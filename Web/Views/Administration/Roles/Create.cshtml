@model RoleView

@using (Html.FormWidgetBox())
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FormGroup())
        {
            @Html.FormLabelFor(model => model.Name)
            @Html.FormTextBoxFor(model => model.Name)
            @Html.FormValidationFor(model => model.Name)
        }
        using (Html.FormGroup())
        {
            @Html.FormLabelFor(model => model.PrivilegesTree)
            using (Html.ContentGroup())
            {
                @Html.JsTreeViewFor(model => model.PrivilegesTree)
            }
            @Html.FormValidationFor(model => model.PrivilegesTree)
        }

        using (Html.FormActions())
        {
            @Html.FormSubmit()
        }
    }
}
