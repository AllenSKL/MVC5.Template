@model RoleView

@using (Html.FormWidgetBox(LinkAction.Edit, LinkAction.Delete))
{
    using (Html.FormGroup())
    {
        @Html.BootstrapFormLabelFor(model => model.Name)
        @Html.BootstrapTextBoxFor(model => model.Name)
    }
    using (Html.FormGroup())
    {
        @Html.BootstrapFormLabelFor(model => model.PrivilegesTree)
        using (Html.ContentGroup())
        {
            @Html.TreeViewFor(model => model.PrivilegesTree)
        }
    }
}
