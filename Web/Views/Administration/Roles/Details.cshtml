@model RoleView

@using (Html.FormWidgetBox(LinkAction.Edit, LinkAction.Delete))
{
    using (Html.FormGroup())
    {
        @Html.NotRequiredLabelFor(model => model.Name)
        @Html.FormTextBoxFor(model => model.Name)
    }
    using (Html.FormGroup())
    {
        @Html.NotRequiredLabelFor(model => model.PrivilegesTree)
        using (Html.ContentGroup())
        {
            @Html.JsTreeViewFor(model => model.PrivilegesTree)
        }
    }
}
