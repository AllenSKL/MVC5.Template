@model RoleView

@using (Html.FormWidgetBox(LinkAction.Details, LinkAction.Edit))
{
    using (Html.FormGroup())
    {
        @Html.NotRequiredLabelFor(model => model.Name)
        @Html.FormTextBoxFor(model => model.Name)
    }
    using (Html.FormGroup())
    {
        @Html.NotRequiredLabelFor(model => model.PrivilegesTree)
        using (Html.ContentGroup())
        {
            @Html.TreeViewFor(model => model.PrivilegesTree)
        }
    }

    using(Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FormActions())
        {
            @Html.FormSubmit()
        }
    }
}
