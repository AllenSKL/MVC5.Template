@model AccountRecoveryView

<div class="title text">@ResourceProvider.GetCurrentContentTitle()</div>
<div class="separator"></div>

@using (Html.BeginForm())
{
    @Html.Partial("_AuthAlerts")

    @Html.AntiForgeryToken()
    <div class="auth-content">
        @using (Html.InputGroup())
        {
            @Html.AuthEmailFor(model => model.Email)
        }
    </div>

    @Html.SubmitFor(MvcTemplate.Resources.Shared.Resources.Recover)
}

<div class="separator"></div>
<div class="auth-actions">
    @Html.ActionLink(
        " ",
        "Login",
        null,
        new
        {
            @class = "text fa fa-key",
            rel = "tooltip",
            data_original_title = MvcTemplate.Resources.Views.AccountView.Texts.Login
        }
    )
    @Html.ActionLink(
        " ",
        "Register",
        null,
        new
        {
            @class = "text fa fa-check",
            rel = "tooltip",
            data_original_title = MvcTemplate.Resources.Views.AccountView.Texts.CreateNewAccount
        }
    )
</div>