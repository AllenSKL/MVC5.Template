            <#= Model.View #> <#= Model.ModelName #> = new <#= Model.View #>();
            serviceMock.Setup(mock => mock.CanCreate(<#= Model.ModelName #>)).Returns(true);
            serviceMock.Setup(mock => mock.Create(<#= Model.ModelName #>));
            controller.Create(<#= Model.ModelName #>);

            serviceMock.Verify(mock => mock.Create(<#= Model.ModelName #>), Times.Once());
        }

