@model RoleView

@using (Html.FormWidgetBox(LinkAction.Details, LinkAction.Edit))
{
    using (Html.FormGroup())
    {
        @Html.FormLabelFor(model => model.Name)
        @Html.FormTextBoxFor(model => model.Name)
    }
    using (Html.FormGroup())
    {
        @Html.FormLabelFor(model => model.PrivilegesTree)
        using (Html.ContentGroup())
        {
            @Html.JsTreeFor(model => model.PrivilegesTree)
        }
    }

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FormGroup())
        {
            using (Html.FormActions())
            {
                @Html.Submit()
            }
        }
    }
}
